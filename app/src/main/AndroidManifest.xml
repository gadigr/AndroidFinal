<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalproject.kg.summary" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.finalproject.kg.summary.StudApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name="com.finalproject.kg.summary.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.finalproject.kg.summary.SignUpActivity"
            android:label="@string/title_activity_log_in" />
        <activity android:name="com.finalproject.kg.summary.LogInActivity" />
        <activity
            android:name="com.finalproject.kg.summary.MainNotesActivity"
            android:label="@string/title_activity_main_notes"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>